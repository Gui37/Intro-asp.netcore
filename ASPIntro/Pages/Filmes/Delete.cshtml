@page "{id:int}"
@model ASPIntro.Pages.Filmes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tens a certeza que queres apagar?</h3>
<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Title)
        </dd>
        <dt class="col-sm-2">
            Data de Lançamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
           Género
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Genre)
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Price)
        </dd>
        <dt class="col-sm-2">
            Pontuação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Rating)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Filme.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button class="btn btn-warning" id="Btn-Link"><a asp-page="../Index">Back to List</a></button>
    </form>
</div>
